<%- include('../inc/head.ejs') %> 
<table class="table table-success text-center">
  <thead>
    <tr>
      <th style="width: 80px;">번호</th>
      <th>제목</th>
      <th style="width: 160px;">작성자</th>
      <th style="width: 160px;">작성일</th>
    </tr>
  </thead>
  <tbody>
    <% for(let v of lists) { %>
      <tr class="table-light">
        <td><%= v.id %></td>
        <td style="text-align: left;">
          <a href="/board/<%= v.id %>?page=<%=pager.page%>" class="d-flex align-items-center">
            <% if(v.thumb) { %>
              <img src="<%= v.thumb %>" style="max-width: 48px; margin-right: 1em;" alt="">
            <% } %>
            <%= v.title %>
          </a>
        </td>
        <td><%= v.writer %></td>
        <td><%= v.wdate %></td>
      </tr>
    <% } %>
  </tbody>
</table>
<%- include('../inc/pager.ejs', { ...pager }) %>
<%- include('../inc/foot.ejs') %> 